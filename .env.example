# SNCライブラリ - Laravel環境変数設定（Docker環境用）

# アプリケーション設定
APP_NAME="SNC Library"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# データベース設定（Docker環境）
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=library_db
DB_USERNAME=library_user
DB_PASSWORD=library_pass

# キャッシュ・セッション設定
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# 管理者パスワード（ハッシュ化）
# デフォルト: "admin123"
# 本番環境では必ず変更してください！
# 生成方法: php artisan tinker で Hash::make('your_password') を実行
ADMIN_PASSWORD_HASH='$2y$10$92IXUNpkjO0rOQ5byMi.Ye4oKoEa3Ro9llC/.og/at2.uheWG/igi'

# 画像処理設定
MAX_DISPLAY_WIDTH=4096
THUMB_MAX_SIZE=512

# ログ設定
LOG_CHANNEL=stack
LOG_LEVEL=debug

# メール設定（使用する場合）
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
